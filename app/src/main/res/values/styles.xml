<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ab_primary</item>
        <item name="colorPrimaryDark">@color/ab_primary_dark</item>
        <item name="colorAccent">@color/ab_primary</item>
        <item name="android:windowBackground">@color/bg_window_light</item>
        <item name="android:textColorPrimary">@color/primary_material_dark</item>
        <item name="android:textColorPrimaryInverse">@color/primary_material_light</item>
    </style>

    <style name="AppTheme.FloatingToolbar" parent="AppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="AppTheme.Settings" parent="AppTheme">
        <item name="android:windowBackground">@color/bg_window_dark</item>
    </style>

    <style name="AppTheme.DropSheetTheme" parent="@android:style/Theme.Dialog">
        <item name="colorPrimary">@color/ab_primary</item>
        <item name="colorPrimaryDark">@color/ab_primary_dark</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:textColor">@null</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/BottomSheetAnimation</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/sheet_slide_out</item>
    </style>

    <style name="Widget.TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="android:background">?attr/colorAccent</item>
        <item name="tabTextColor">@null</item>
        <item name="tabSelectedTextColor">@null</item>
        <item name="tabTextAppearance">@style/TextAppearance.NavTab</item>
    </style>

    <style name="TextAppearance.Dialer.NumberItem" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/ab_primary</item>
        <item name="android:textSize">@dimen/num_pad_number</item>
    </style>

    <style name="TextAppearance.Dialer.Number" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/dialer_number</item>
    </style>

    <style name="TextAppearance.Dialer.Letters" parent="TextAppearance.AppCompat.Caption"/>

    <style name="TextAppearance.Body1" parent="TextAppearance.AppCompat.Body1">
    </style>

    <style name="TextAppearance.Body1.Inverse" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.AppCompat.Body2">
    </style>

    <style name="TextAppearance.Body2.Inverse" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="TextAppearance.Subhead" parent="TextAppearance.AppCompat.Subhead"/>

    <style name="TextAppearance.Subhead.Inverse" parent="TextAppearance.AppCompat.Subhead.Inverse"/>

    <style name="TextAppearance.Subhead2" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/subhead2</item>
    </style>

    <style name="TextAppearance.NavTab" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Widget.HighlightButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_primary_btn</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Headline.Inverse" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>


</resources>
